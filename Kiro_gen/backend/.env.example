# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Bedrock Configuration
BEDROCK_MODEL_ID_VISION=us.anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_MODEL_ID_ANALYSIS=us.anthropic.claude-3-5-sonnet-20241022-v2:0

# Polly Configuration
POLLY_ENGINE=neural
POLLY_OUTPUT_FORMAT=mp3

# S3 Configuration
S3_BUCKET_NAME=comic-audio-narrator-library
S3_STORAGE_CLASS=INTELLIGENT_TIERING

# Local Storage Configuration
LOCAL_STORAGE_PATH=./storage/audio
LOCAL_STORAGE_QUOTA_GB=100

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
